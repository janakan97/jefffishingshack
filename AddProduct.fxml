<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Owner.AddProduct">
   <children>
      <TabPane prefHeight="400.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <tabs>
          <Tab text="Add New Product">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TextField fx:id="productidadd" layoutX="217.0" layoutY="67.0" promptText="Product ID" />
                        <TextField fx:id="productname" layoutX="217.0" layoutY="116.0" promptText="Product Name" />
                        <TextField fx:id="quantityadd" layoutX="217.0" layoutY="170.0" promptText="Quantity" />
                        <TextField fx:id="size" layoutX="217.0" layoutY="228.0" promptText="Size" />
                        <TextField fx:id="unitprice" layoutX="217.0" layoutY="276.0" promptText="Unit Price" />
                        <Button fx:id="addbtn" layoutX="271.0" layoutY="326.0" mnemonicParsing="false" onAction="#addproduct" onDragEntered="#addproduct" text="ADD" />
                     </children>
                  </AnchorPane>
            </content>
               <graphic>
                  <Button fx:id="btn" mnemonicParsing="false" onAction="#back" text="BACK" />
               </graphic>
          </Tab>
          <Tab text="Update paduct ">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TextField fx:id="productiddup" layoutX="217.0" layoutY="120.0" promptText="Product ID" />
                        <TextField fx:id="quantityup" layoutX="217.0" layoutY="170.0" promptText="Quantity" />
                        <Button fx:id="update" layoutX="271.0" layoutY="234.0" mnemonicParsing="false" onAction="#update" onDragEntered="#update" text="UPDATE" />
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>
